{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "lib": [ "es2020", "ES2020" ],
    "strict": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "node_modules/@types/"
    ],
    "paths": {
      "Commons/*": ["./Commons/*"],
    }
  },
  "exclude": [
    "node_modules",
    "other_excluded_from_build",
    "bash_scripts",
    "dist"
  ],
  "include": [
    "**/*"
  ],
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  }
}
